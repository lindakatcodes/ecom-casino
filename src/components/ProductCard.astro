---
import { Image } from "astro:assets";

const { product } = Astro.props;
---

<article>
  <a href=`/product/${product.id}`>
    <div class="image">
      <Image
        src={product.images[0].url}
        alt={product.name}
        width="325"
        height="325"
      />
    </div>
    <div class="info">
      <h2>{product.name}</h2>
      <p class="cat">{product.category}</p>
      <p class="desc">{product.description}</p>
      <div class="buy">
        <p>${product.price}</p>
        <button>Add to Cart</button>
      </div>
    </div>
  </a>
</article>

<style>
  article {
    border: 1px solid var(--mid);
    border-radius: 0.5rem;
    max-inline-size: 22rem;
    padding: 0.75rem;
    box-shadow: none;
    transition: box-shadow 0.2s ease-in-out;
  }

  article:hover {
    box-shadow: -4px 10px 25px 0px rgba(15, 23, 42, 0.25);
  }

  a {
    text-decoration: none;
    color: var(--dark);
  }

  .image {
    display: grid;
    place-items: center;
    margin-bottom: 0.75rem;
  }

  img {
    inline-size: 100%;
    border-radius: 0.25rem;
  }

  .cat {
    font-size: 0.875rem;
    color: var(--mid);
  }

  .desc {
    text-wrap: balance;
    margin-bottom: 0.5rem;
    block-size: calc(1.6 * 4 * 1rem);
  }

  .buy {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .buy button {
    background-color: var(--green);
    color: var(--light);
    border: none;
    border-radius: 0.25rem;
    padding: 0.25rem 0.75rem;
    cursor: pointer;
  }
</style>
